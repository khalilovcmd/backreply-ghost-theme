{{!-- Sidebar with BackReply cards --}}
<aside class="gh-sidebar">

    {{!-- About Us Card --}}
    <div class="gh-sidebar-card">
        <h3 class="gh-sidebar-card-title"><span>About Us</span></h3>
        <div class="gh-sidebar-card-body">
            <div class="gh-sidebar-about">
                {{#if @site.logo}}
                    <img class="gh-sidebar-about-logo" src="{{@site.logo}}" alt="{{@site.title}}" />
                {{/if}}
                <p>Built by a veteran team that has successfully launched and operated three SaaS products over the last
                    7 years. We understand support workflows inside and out.</p>
                <p>BackReply turns Slack threads into a first-class interface for Intercom conversations. Reply in
                    Slack, stay synced in Intercom.</p>
                <a class="gh-sidebar-about-link" href="https://backreply.com/about" target="_blank" rel="noopener">Our
                    story &rarr;</a>
            </div>
        </div>
    </div>

    {{!-- Featured Articles Card --}}
    <div class="gh-sidebar-card">
        <h3 class="gh-sidebar-card-title"><span>Latest Articles</span></h3>
        <div class="gh-sidebar-card-body">
            <ul class="gh-sidebar-articles">
                {{#get "posts" limit="3" order="published_at desc"}}
                    {{#foreach posts}}
                        <li class="gh-sidebar-article">
                            <span class="gh-sidebar-article-num">{{@number}}</span>
                            <div class="gh-sidebar-article-content">
                                <a href="{{url}}" class="gh-sidebar-article-title">{{title}}</a>
                                <time class="gh-sidebar-article-date"
                                    datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
                            </div>
                        </li>
                    {{/foreach}}
                {{/get}}
            </ul>
        </div>
    </div>

